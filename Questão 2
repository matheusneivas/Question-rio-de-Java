import java.util.Scanner;

public class calculadora {

    public static void main(String[] args) {
        Scanner scanner = new Scanner (System.in);
        
        System.out.print("Digite o primeiro numero: ");
        double numero1 = scanner.nextDouble();
        
        System.out.print("Digite o segundo numero: ");
        double numero2 = scanner.nextDouble();
        
        double soma = numero1 + numero2;
        System.out.print("\nA soma dos numeros e: " + soma);
        
        double sub = numero1 - numero2;
        System.out.print("\nA subtracao dos numeros e: " + sub);
        
        double mut = numero1 * numero2;
        System.out.print("\nA mutiplicacao dos numeros e: " + mut);
     
        double div = numero1 / numero2;
        System.out.print("\nA divisao dos numeros e: " + div);
    }
}
